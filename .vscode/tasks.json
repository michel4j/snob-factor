{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Project",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": {
                "owner": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/DEBUG"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run test",
            "group": "test",
            "type": "shell",
            "command": "make test",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ],
    "version": "2.0.0"
}
